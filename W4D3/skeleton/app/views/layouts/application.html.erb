<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <h1>Welcome, <%= current_user.user_name %>!</h1>
    <% end %>
    <% flash.each do |key, value| %>
        <div><%= value %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
